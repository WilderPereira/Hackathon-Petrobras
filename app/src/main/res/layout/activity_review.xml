<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="wilderpereira.com.brbox.ReviewActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:elevation="10dp"
            android:background="@drawable/rating"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="122dp"
            android:layout_gravity="bottom|center"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="POSTO LARANJEIRAS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="8sp"
                    android:text="Rua das Laranjeiras, 139"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="56dp"
                    android:textSize="16sp"
                    android:text="Laranjeiras, Rio de Janeiro - RJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>


    <TextView
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faça sua Avaliação" />

    <RatingBar
        android:layout_gravity="center"
        android:clickable="true"
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
